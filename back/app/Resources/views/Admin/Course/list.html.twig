{% extends '::base.html.twig' %}

{% block title 'admin.course.title'|trans %}

{% block content %}
    <h1>
        {{ 'admin.course.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_course_create') }}">
                {{ 'admin.course.create.title'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if courses is empty %}
        <div class="alert alert-info">{{ 'admin.course.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-4">{{ 'admin.course.column.title'|trans }}</th>
                <th class="col-md-2">{{ 'admin.course.column.teacherName'|trans }}</th>
                <th class="col-md-3">{{ 'admin.course.column.university'|trans }}</th>
                <th class="col-md-3">{{ 'admin.course.column.folders'|trans }}</th>
                <th class="col-md-3">{{ 'admin.course.column.enabled'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{ course.title }}</td>
                    <td>{{ course.teacherName }}</td>
                    <td>{{ course.university }}</td>
                    <td>
                        <a href="{{ path('admin_folder_list', {'course': course.id}) }}">
                            {{ course.numberOfFolders }}
                        </a>
                    </td>
                    <td>{{ course.enabled ? '✔︎' : '' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
