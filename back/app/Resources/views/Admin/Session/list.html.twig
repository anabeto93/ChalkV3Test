{% extends '::base.html.twig' %}

{% block title 'admin.session.title'|trans({'%courseTitle%': course.title}) %}

{% import ':Admin/Common:macro.html.twig' as macro %}

{% block content %}
    <h1>
        {{ 'admin.session.title'|trans({'%courseTitle%': course.title}) }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_session_create', {'course': course.id}) }}">
                {{ 'admin.session.create.link'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if sessions is empty %}
        <div class="alert alert-info">{{ 'admin.session.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>{{ 'admin.session.column.rank'|trans }}</th>
                <th>{{ 'admin.session.column.title'|trans }}</th>
                <th>{{ 'admin.session.column.folder'|trans }}</th>
                <th class="text-center">{{ 'admin.session.column.isEnabled'|trans }}</th>
                <th class="text-center">{{ 'admin.session.column.needValidation'|trans }}</th>
                <th class="text-center">{{ 'admin.session.column.progression'|trans }}</th>
                <th class="text-center">{{ 'admin.session.column.quizAnswer'|trans }}</th>
                <th class="col-md-2"></th>
            </tr>
            </thead>
            <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{ session.rank }}</td>
                    <td>{{ session.title }}</td>
                    <td>{{ session.folderTitle }}</td>
                    <td class="text-center">{{ session.isEnabled ? '✔︎' : '' }}</td>
                    <td class="text-center">{{ session.needValidation ? '✔︎' : '' }}</td>
                    <td class="text-center">
                        {% if session.needValidation %}
                            <a href="{{ path('admin_session_progression', {'course': course.id, 'session': session.id}) }}" title="{{ 'admin.session.viewProgression'|trans }}">
                                {{ session.usersValidated }}/{{ session.usersAssignedToCourse }}
                            </a>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if session.hasQuiz %}
                            <a href="{{ path('admin_session_progression', {'course': course.id, 'session': session.id}) }}" title="{{ 'admin.session.viewProgression'|trans }}">
                                {{ session.usersAnsweredQuizNumber }}/{{ session.usersAssignedToCourse }}
                            </a>
                        {% endif %}
                    </td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a href="{{ path('admin_session_preview', {'course': course.id, 'session': session.id}) }}" class="btn btn-default btn-sm">
                                {{ 'admin.session.action.preview'|trans }}
                            </a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                     <a href="{{ path('admin_session_update', {'course': course.id, 'session': session.id}) }}" class="btn-sm">{{ 'admin.session.action.update'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_session_quiz', {'course': course.id, 'session': session.id}) }}" class="btn-sm">{{ 'admin.session.action.quiz'|trans }}</a>
                                </li>
                                <li>
                                    {{ macro.delete_button(
                                    path('admin_session_delete', { 'course': course.id, 'session': session.id }),
                                    'admin.session.action.delete'|trans,
                                    { 'class': 'btn btn-default btn-sm', 'data-confirm': 'admin.session.action.confirmDelete'|trans })
                                    }}
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
