{% extends '::base.html.twig' %}

{% block title 'admin.session.title'|trans({'%courseTitle%': course.title}) %}

{% block content %}
    <h1>
        {{ 'admin.session.title'|trans({'%courseTitle%': course.title}) }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_session_create', {'course': course.id}) }}">
                {{ 'admin.session.create.link'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if sessions is empty %}
        <div class="alert alert-info">{{ 'admin.session.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-2">{{ 'admin.session.column.rank'|trans }}</th>
                <th class="col-md-6">{{ 'admin.session.column.title'|trans }}</th>
                <th class="col-md-4">{{ 'admin.session.column.folder'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{ session.rank }}</td>
                    <td>{{ session.title }}</td>
                    <td>{{ session.folderTitle }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
