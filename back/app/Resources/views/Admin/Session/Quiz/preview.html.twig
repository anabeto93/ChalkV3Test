{% extends '::base.html.twig' %}

{% block title 'admin.session.quiz.title'|trans({'%sessionTitle%': session.title}) %}

{% block content %}
    <h1>{{ 'admin.session.quiz.title'|trans({'%sessionTitle%': session.title}) }}</h1>
    <hr>
    {% if questions is empty %}
        <div class="alert alert-info">{{ 'admin.session.quiz.no-questions'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-5">{{ 'admin.session.quiz.column.question'|trans }}</th>
                <th class="col-md-7">{{ 'admin.session.quiz.column.answers'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for question in questions %}
                <tr>
                    <td>{{ question.title }}</td>
                    <td>
                        <ul>
                            {% for answer in question.answers %}
                                <li>{{ answer.isCorrect ? '✔︎' : ' ' }} {{ answer.title }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
