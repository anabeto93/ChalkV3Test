{% extends '::base.html.twig' %}

{% block title 'admin.institution.title'|trans %}

{% block content %}
    <h1>
        {{ 'admin.institution.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_institution_create') }}">
                {{ 'admin.institution.create.title'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if institutions is empty %}
        <div class="alert alert-info">{{ 'admin.institution.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-2">{{ 'admin.institution.column.name'|trans }}</th>
                    <th class="col-md-1"></th>
                </tr>
            </thead>
            <tbody>
            {% for institution in institutions %}
                <tr>
                    <td>{{ institution.name }}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_institution_update', {'institution': institution.id}) }}" class="btn btn-sm btn-default">
                            {{ 'admin.institution.action.update'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

