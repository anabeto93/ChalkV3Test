{% extends '::base.html.twig' %}

{% block title course.title ~ ': ' ~ 'admin.folder.title'|trans %}

{% import ':Admin/Common:macro.html.twig' as macro %}

{% block content %}
    <h1>
        <a href="{{ path('admin_course_list') }}">{{ course.title }}</a>: {{ 'admin.folder.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_folder_create', {'course': course.id}) }}">
                {{ 'admin.folder.create.link'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if folders is empty %}
        <div class="alert alert-info">{{ 'admin.folder.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>{{ 'admin.folder.column.rank'|trans }}</th>
                <th class="col-md-8">{{ 'admin.folder.column.title'|trans }}</th>
                <th class="col-md-2"></th>
            </tr>
            </thead>
            <tbody>
            {% for folder in folders %}
                <tr>
                    <td>{{ folder.rank }}</td>
                    <td>{{ folder.title }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a href="{{ path('admin_folder_update', {'course': course.id, 'folder': folder.id}) }}" class="btn btn-default btn-sm">
                                {{ 'admin.folder.action.update'|trans }}
                            </a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    {{ macro.delete_button(
                                        path('admin_folder_delete', { 'course': course.id, 'folder': folder.id }),
                                        'admin.folder.action.delete'|trans,
                                        { 'class': 'btn btn-default btn-sm', 'data-confirm': 'admin.folder.action.confirmDelete'|trans })
                                    }}
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
