{% extends '::base.html.twig' %}

{% block title 'admin.folder.title'|trans({'%courseTitle%': course.title}) %}

{% block content %}
    <h1>
        {{ 'admin.folder.title'|trans({'%courseTitle%': course.title}) }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_folder_create', {'course': course.id}) }}">
                {{ 'admin.folder.create.link'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if folders is empty %}
        <div class="alert alert-info">{{ 'admin.folder.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-12">{{ 'admin.folder.column.title'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for folder in folders %}
                <tr>
                    <td>{{ folder.title }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
