{% extends '::base.html.twig' %}

{% block content %}
    <h1>
        {{ 'admin.user.list.title'|trans }}
    </h1>
    <hr>
    {% if userList.users is empty %}
        <div class="alert alert-info">{{ 'admin.user.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-4">{{ 'admin.user.column.firstName'|trans }}</th>
                <th class="col-md-2">{{ 'admin.user.column.lastName'|trans }}</th>
                <th class="col-md-3">{{ 'admin.user.column.phoneNumber'|trans }}</th>
                <th class="col-md-3">{{ 'admin.user.column.country'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList.users %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.country|country }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row filters">
            <div class="col-md-offset-8 col-md-4">
                {{ include(':Admin/Common:paginate.html.twig', { 'paginator': userList }) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
