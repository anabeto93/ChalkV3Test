{% extends '::base.html.twig' %}

{% block title institution.name ~ ' | ' ~ 'admin.user.list.title'|trans %}

{% block content %}
    <h2>
        {{ institution.name }} | {{ 'admin.user.list.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-default" href="{{ path('admin_user_import', {'institution': institution.id}) }}">
                {{ 'admin.user.import.title'|trans }}
            </a>
            <a class="btn btn-primary" href="{{ path('admin_user_create', {'institution': institution.id}) }}">
                {{ 'admin.user.create.title'|trans }}
            </a>
        </span>
    </h2>
    <hr>
    {% if userList.users is empty %}
        <div class="alert alert-info">{{ 'admin.user.no-result'|trans }}</div>
    {% else %}
        {{ form_start(batchForm, {'attr': { 'data-confirm': 'admin.user.batch.confirm'|trans }}) }}
        {{ form_errors(batchForm) }}
        {{ form_errors(batchForm.userViews) }}
        {{ form_widget(batchForm.sendLoginAccessAction) }}

        <table class="table table-striped table-condensed table-hover">
            <thead>
            <tr>
                <th></th>
                <th>{{ 'admin.user.column.lastName'|trans }}</th>
                <th>{{ 'admin.user.column.firstName'|trans }}</th>
                <th>{{ 'admin.user.column.phoneNumber'|trans }}</th>
                <th>{{ 'admin.user.column.country'|trans }}</th>
                <th>{{ 'admin.user.column.token'|trans }}</th>
                <th>{{ 'admin.user.column.createdAt'|trans }}</th>
                <th>{{ 'admin.user.column.lastLoginAccessNotificationAt'|trans }}</th>
                <th>{{ 'admin.user.column.multiLogin'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList.users %}
                <tr>
                    <td>{{ form_widget(batchForm.userViews[user.id]) }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.country|country }}</td>
                    <td>{{ user.apiToken }}</td>
                    <td>{{ user.createdAt|localizeddate('medium', 'short') }}</td>
                    <td>{{ user.lastLoginAccessNotificationAt ? user.lastLoginAccessNotificationAt|localizeddate('medium', 'short') : '-' }}</td>
                    <td>{{ user.multiLogin ? '✔︎' : '' }}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_user_update', {'user': user.id, 'institution': institution.id}) }}" class="btn btn-default btn-sm">
                            {{ 'admin.user.action.update'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ form_end(batchForm) }}

        <div class="row filters">
            <div class="col-md-offset-8 col-md-4">
                {{ include(':Admin/Common:paginate.html.twig', { 'paginator': userList }) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
