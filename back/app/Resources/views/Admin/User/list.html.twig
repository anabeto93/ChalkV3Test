{% extends '::base.html.twig' %}

{% block title 'admin.user.list.title'|trans %}

{% block content %}
    <h1>
        {{ 'admin.user.list.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_user_create') }}">
                {{ 'admin.user.create.title'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if userList.users is empty %}
        <div class="alert alert-info">{{ 'admin.user.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-2">{{ 'admin.user.column.lastName'|trans }}</th>
                <th class="col-md-3">{{ 'admin.user.column.firstName'|trans }}</th>
                <th class="col-md-3">{{ 'admin.user.column.phoneNumber'|trans }}</th>
                <th class="col-md-2">{{ 'admin.user.column.country'|trans }}</th>
                <th class="col-md-1">{{ 'admin.user.column.token'|trans }}</th>
                <th class="col-md-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList.users %}
                <tr>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.country|country }}</td>
                    <td>{{ user.apiToken }}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_user_update', {'user': user.id}) }}" class="btn btn-default btn-sm">
                            {{ 'admin.user.action.update'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row filters">
            <div class="col-md-offset-8 col-md-4">
                {{ include(':Admin/Common:paginate.html.twig', { 'paginator': userList }) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
