{% extends '::base.html.twig' %}

{% block title %}
    {{ institution.name }} | {{ 'admin.cohort.title'|trans({'%cohortTitle%': cohort.title}) }} | {{ 'admin.course.list.title'|trans }}
{% endblock title %}

{% import ':Admin/Common:macro.html.twig' as macro %}

{% block content %}
    <h2>
        <a href="{{ path('admin_cohort_list', { 'institution': institution.id }) }}">{{ institution.name }}</a> | {{ 'admin.cohort.title'|trans({'%cohortTitle%': cohort.title}) }} | {{ 'admin.course.list.title'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_cohort_assign_courses', { 'institution': institution.id, 'cohort': cohort.id }) }}">
                {{ 'admin.cohortCourse.assign.title'|trans }}
            </a>
        </span>
    </h2>
    <hr>
    {% if courses is empty %}
        <div class="alert alert-info">{{ 'admin.course.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-3">{{ 'admin.course.column.title'|trans }}</th>
                <th class="col-md-3">{{ 'admin.course.column.teacherName'|trans }}</th>
                <th class="col-md-2">{{ 'admin.course.column.folders'|trans }}</th>
                <th class="col-md-2">{{ 'admin.course.column.sessions'|trans }}</th>
                <th class="col-md-1">{{ 'admin.course.column.enabled'|trans }}</th>
                <th class="col-md-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{ course.title }}</td>
                    <td>{{ course.teacherName }}</td>
                    <td>
                        <a href="{{ path('admin_folder_list', {'course': course.id}) }}" title="{{ 'admin.folder.list.title'|trans }}" class="btn btn-sm btn-default">
                            {{ 'admin.course.column.folders'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_session_list', {'course': course.id}) }}" title="{{ 'admin.session.list.title'|trans }}">
                            {{ course.numberOfSessions }}
                        </a>
                    </td>
                    <td>{{ course.enabled ? '✔︎' : '' }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a href="{{ path('admin_course_update', {'institution': institution.id, 'course': course.id}) }}" class="btn btn-sm btn-default">
                                {{ 'admin.course.action.update'|trans }}
                            </a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    {{ macro.delete_button(
                                        path('admin_cohort_course_delete', { 'institution': institution.id, 'cohort': cohort.id, 'course': course.id }),
                                        'admin.cohortCourse.action.delete'|trans,
                                        { 'class': 'btn btn-default btn-sm', 'data-confirm': 'admin.cohortCourse.action.confirmDelete'|trans })
                                    }}
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
