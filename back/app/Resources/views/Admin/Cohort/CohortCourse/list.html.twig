{% extends '::base.html.twig' %}

{% block title 'admin.cohort.cohortCourse.list.title'|trans({'%cohortTitle%': cohort.title}) ~ ' | ' ~ 'admin.cohort.listCourses'|trans %}

{% block content %}
    <h2>
        <a href="{{ path('admin_institution_list') }}">{{ institution.name }}</a> | <a href="{{ path('admin_cohort_list', { 'institution': institution.id }) }}">{{ 'admin.cohort.cohortCourse.list.title'|trans({'%cohortTitle%': cohort.title}) }}</a> | {{ 'admin.cohort.listCourses'|trans }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_cohort_assign_courses', { 'institution': institution.id, 'cohort': cohort.id }) }}">
                {{ 'admin.cohort.cohortCourse.assign.title'|trans }}
            </a>
        </span>
    </h2>
    <hr>
    {% if courses is empty %}
        <div class="alert alert-info">{{ 'admin.course.no-result'|trans }}</div>
    {% else %}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-2">{{ 'admin.course.column.title'|trans }}</th>
                <th class="col-md-2">{{ 'admin.course.column.teacherName'|trans }}</th>
                <th class="col-md-1">{{ 'admin.course.column.folders'|trans }}</th>
                <th class="col-md-1">{{ 'admin.course.column.sessions'|trans }}</th>
                <th class="col-md-1">{{ 'admin.course.column.enabled'|trans }}</th>
                <th class="col-md-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{ course.title }}</td>
                    <td>{{ course.teacherName }}</td>
                    <td>
                        <a href="{{ path('admin_folder_list', {'course': course.id}) }}" title="{{ 'admin.course.viewFolders'|trans }}">
                            {{ course.numberOfFolders }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_session_list', {'course': course.id}) }}" title="{{ 'admin.course.viewSessions'|trans }}">
                            {{ course.numberOfSessions }}
                        </a>
                    </td>
                    <td>{{ course.enabled ? '✔︎' : '' }}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_course_update', {'course': course.id}) }}" class="btn btn-sm btn-default">
                            {{ 'admin.course.action.update'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
