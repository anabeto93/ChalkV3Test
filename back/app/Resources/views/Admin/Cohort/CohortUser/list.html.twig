{% extends '::base.html.twig' %}

{% block title 'admin.cohort.cohortUser.list.title'|trans({'%cohortTitle%': cohort.title}) %}

{% import ':Admin/Common:macro.html.twig' as macro %}

{% block content %}
    <h1>
        {{ 'admin.cohort.cohortUser.list.title'|trans({'%cohortTitle%': cohort.title}) }}
        <span class="pull-right">
            <a class="btn btn-primary" href="{{ path('admin_user_create') }}">
                {{ 'admin.user.create.title'|trans }}
            </a>
            <a class="btn btn-primary" href="{{ path('admin_cohort_assign_users', {'cohort': cohort.id}) }}">
                {{ 'admin.cohort.cohortUser.assign.title'|trans }}
            </a>
        </span>
    </h1>
    <hr>
    {% if userList.users is empty %}
        <div class="alert alert-info">{{ 'admin.user.no-result'|trans }}</div>
    {% else %}
        {{ form_start(batchForm, {'attr': { 'data-confirm': 'admin.user.batch.confirm'|trans }}) }}
        {{ form_errors(batchForm) }}
        {{ form_errors(batchForm.userViews) }}
        {{ form_widget(batchForm.sendLoginAccessAction, { 'attr': { 'class': 'btn btn-success' } }) }}

        <table class="table table-striped table-condensed table-hover">
            <thead>
            <tr>
                <th><input id="select_all" type="checkbox" /></th>
                <th>{{ 'admin.user.column.lastName'|trans }}</th>
                <th>{{ 'admin.user.column.firstName'|trans }}</th>
                <th>{{ 'admin.user.column.phoneNumber'|trans }}</th>
                <th>{{ 'admin.user.column.country'|trans }}</th>
                <th>{{ 'admin.user.column.token'|trans }}</th>
                <th>{{ 'admin.user.column.createdAt'|trans }}</th>
                <th>{{ 'admin.user.column.lastLoginAccessNotificationAt'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList.users %}
                <tr>
                    <td>{{ form_widget(batchForm.userViews[user.id]) }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.country|country }}</td>
                    <td>{{ user.apiToken }}</td>
                    <td>{{ user.createdAt|localizeddate('medium', 'short') }}</td>
                    <td>{{ user.lastLoginAccessNotificationAt ? user.lastLoginAccessNotificationAt|localizeddate('medium', 'short') : '-' }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a href="{{ path('admin_user_update', {'user': user.id}) }}" class="btn btn-default btn-sm">
                                {{ 'admin.user.action.update'|trans }}
                            </a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                {#<li>#}
                                    {#<a href="{{ path('admin_user_cohort_delete', { 'cohort': cohort.id, 'user': user.id }) }}">#}
                                        {#{{ 'admin.cohortUser.action.delete'|trans }}#}
                                    {#</a>#}
                                {#</li>#}
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ form_end(batchForm) }}
    {% endif %}
{% endblock %}
